---
const links = [
  { href: "/", label: "Home" },
  { href: "/publications", label: "Publications" },
  { href: "/teaching", label: "Teaching" },
  { href: "/projects", label: "Projects" },
  { href: "/student-projects", label: "Student Projects" },
];
const path = Astro.url.pathname;
---

<nav class="flex flex-wrap items-center justify-between gap-3 rounded-2xl border border-zinc-800 bg-zinc-900/60 px-4 py-3">
  <div class="text-sm font-semibold tracking-wide text-zinc-100">
    Academic Portfolio
  </div>
  <div class="flex flex-wrap gap-2">
    {links.map((l) => (
      <a
        href={l.href}
        class={`rounded-xl px-3 py-2 text-sm transition ${
          path === l.href
            ? "bg-white/10 text-white"
            : "text-zinc-300 hover:bg-white/5 hover:text-white"
        }`}
      >
        {l.label}
      </a>
    ))}
    <a
      href="/admin/"
      class="rounded-xl bg-emerald-500/15 px-3 py-2 text-sm text-emerald-200 hover:bg-emerald-500/20"
    >
      Admin
    </a>
  </div>
</nav>